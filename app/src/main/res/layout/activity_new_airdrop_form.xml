<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newAirdropForm"
    android:background="@color/colorPrimaryDark">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp">


        <!-- contact email -->
        <TextView

            android:id="@+id/contact_email_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_email"/>

        <TextView
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:background="@drawable/rounded_edittext"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:id="@+id/contact_email_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="example@email.com"
        android:textColorHint="@color/subtext"
        />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp">


    <!-- ICO Project name ? -->
    <TextView

            android:id="@+id/icoProjectNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ico_name" />

    <TextView
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

        <EditText
            android:background="@drawable/rounded_edittext"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:id="@+id/icoProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"/>
    <!-- ICO Project name ? -->


    <!-- Project Category -->
    <!-- Project Category -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp">


    <!-- Social Media URLs -->
    <TextView
            android:id="@+id/socialMediaURLHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_links" />

        <TextView
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <EditText
            android:hint="@string/all_links_hint"
            android:background="@drawable/rounded_edittext"
            android:layout_gravity="center"
            android:id="@+id/allLinksURL"
            android:gravity="start|top"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="@color/subtext"/>
    <!-- Social Media URLs -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="28dp"
        android:layout_marginStart="8dp">


    <!-- Airdrop Dates -->
    <TextView
        android:id="@+id/airdropDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/airdrop_dates"/>

        <TextView
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:background="@drawable/rounded_edittext"
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:hint="@string/airdrop_starting_date"
            android:textSize="14sp"
            android:textColor="#000000"
            />



        <EditText
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_edittext"
            android:id="@+id/endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:hint="@string/airdrop_ending_date"
            android:textSize="14sp"
            android:textColor="#000000"
            />

    </LinearLayout>
    <!-- Airdrop Dates -->

    <!-- Token Symbol -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp">

    <TextView
        android:id="@+id/tokenSymbolHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/token_symbol" />

        <TextView
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:background="@drawable/rounded_edittext"
        android:layout_gravity="center"
        android:id="@+id/tokenSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textColorHint="@color/subtext"
        android:hint="@string/token_symbol_hint"
        />
    <!-- Token Symbol -->



    <!-- Restrictions -->
        <TextView
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restrictionsHeader"
            android:text="@string/restrictions"/>

        <EditText
            android:layout_gravity="center"
            android:id="@+id/restrictions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:textColor="#000000"
            android:textColorHint="@color/subtext"
            android:hint="@string/restrictions_hint"
            />
    <!-- Restrictions -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp">

    <!-- About Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutHeader"
        android:text="@string/about"/>
    <!-- About Header -->

        <TextView
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- About -->
    <EditText
        android:background="@drawable/rounded_edittext"
        android:id="@+id/about"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:hint="@string/about_hint"
        android:textColorHint="@color/subtext"
        />
    <!-- About -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp">

    <!-- Claim Instructions Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/claim_instructionsHeader"
        android:text="@string/claim_instructions"/>
    <!-- Claim Instructions Header -->

        <TextView
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <!-- Claim Instructions -->
    <EditText
        android:background="@drawable/rounded_edittext"
        android:id="@+id/claim_instructions"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:hint="@string/claim_instructions_hint"
        android:textColorHint="@color/subtext"
        />
    <!-- Claim Instructions -->


    <!-- Estimated Value Header -->
    <TextView
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estimated_value_header"
        android:text="@string/estimated_value"/>
    <!-- Estimated Value Header -->

    <!-- Estimated Value -->
    <EditText
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext"
        android:id="@+id/estimated_value"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:hint="@string/estimated_value_hint"
        android:textColorHint="@color/subtext"
        />
    <!-- Estimated Value -->


    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/terms_and_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#007cd4"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="By clicking send I accept the Terms &amp; Conditions"
        />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/sendAirdrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext"
        android:text="Send"
        android:textColor="#000000"
        />




</LinearLayout>

</ScrollView>