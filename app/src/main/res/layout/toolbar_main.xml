<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/main_toolbar_style"
    app:layout_scrollFlags="scroll|enterAlways"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/main_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_toolbar_title"
                android:textSize="24sp"/>

            <TextView
                android:textColor="#ffffff"
                android:layout_marginStart="4dp"
                android:id="@+id/main_toolbar_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_toolbar_subtitle"
                android:textSize="18sp"/>

        </LinearLayout>




        <TextView
            android:textColor="#ffffff"
            android:layout_marginTop="12dp"
            android:id="@+id/main_toolbar_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_toolbar_slogan"
            android:textSize="18sp"/>


    </LinearLayout>





</android.support.v7.widget.Toolbar>

