<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/main_toolbar_style"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    app:layout_scrollFlags="scroll|enterAlways"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <!-- my portfolio -->
        <TextView
            android:id="@+id/my_portfolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/my_portfolio"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- airdrops done -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/total_airdrops_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Airdrops done:"
                android:textColor="#894242"
                android:textSize="22sp"/>


            <TextView
                android:id="@+id/total_airdrops_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=" 2"
                android:textColor="#894242"
                android:textSize="22sp"/>


        </LinearLayout>

        <!-- My Wallet -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/my_wallet_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="Wallet:"
                android:textColor="#d20d0d"
                android:textSize="22sp"/>


            <TextView
                android:id="@+id/my_wallet_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text=" Not Connected"
                android:textColor="#d20d0d"
                android:textSize="22sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_earned_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Total earned:"
                android:textColor="#201414"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@+id/total_airdrops_text"
                app:layout_constraintTop_toBottomOf="@+id/total_airdrops_text" />

            <TextView
                android:id="@+id/total_earned_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=" 0$"
                android:textColor="#201414"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@+id/total_airdrops_text"
                app:layout_constraintTop_toBottomOf="@+id/total_airdrops_text" />

        </LinearLayout>



    </LinearLayout>





</android.support.v7.widget.Toolbar>

